<h2 id = "collection">Collection of both dogs and cats</h2>

<ul>
    <% myCat.forEach((cat,index) => { %>
        <li id = "card">
            <img src="<%= cat.image %>">
            <p><%= cat.name %> is famous for <%= cat.famousFor %></p> 

            <br>
            <hr>
            
            <div id = "bottomText">
                <a id = "edit" href="/cats/edit/<%= index %>">Edit</a>
            </div>

            <form action="/cats/<%= index %>/?_method=DELETE" method = "POST">
                <input type="submit" value = "Delete" id = "delete">
            </form>

        </li>
    <% }) %>
</ul>

