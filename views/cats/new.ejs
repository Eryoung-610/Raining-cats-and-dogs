<form action="/cats" method = "POST">
    <label for="catName">Name</label>
    <input type="text" id = "catName" name = "name">

    <label for="catImage">Image</label>
    <input type="text" id = "catImage" name = "image">

    <label for="catFamous">Famous for :</label>
    <input type="text" id = "catFamous" name = "famousFor">

    <input type="submit">
</form>
<ul>
    <% myCat.forEach((cat,index) => { %>
        <li id = "card">
            <img src="<%= cat.image %>">
            <p><%= cat.name %> is famous for <%= cat.famousFor %></p> 
            
            <br>
            <hr>

            <div id = "bottomText">
                <a id = "edit" href="/cats/edit/<%= index %>">Edit</a>
                <form action="/cats/<%= index %>/?_method=DELETE" method = "POST">
                    <input type="submit" value = "Delete" id = "delete">
                </form>
            </div>

        </li>
    <% }) %>
</ul>