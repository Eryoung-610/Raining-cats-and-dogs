<form action="/cats" method = "GET">
    <label for="nameFilter">Filter By Name</label>
    <input type="text" id = "nameFilter" name = "nameFilter">
    <input type="submit">
</form>

<ul>
    <% myCat.forEach((cat,index) => { %>
        <li id = "card">
            <img src="<%= cat.image %>">
            <p><%= cat.name %> is famous for <%= cat.famousFor %></p> 

            <br>
            <hr>
            
            <div id = "bottomText">
                <a id = "edit" href="/cats/edit/<%= index %>">Edit</a>
            </div>

            <form action="/cats/<%= index %>/?_method=DELETE" method = "POST">
                <input type="submit" value = "Delete" id = "delete">
            </form>

        </li>
    <% }) %>
</ul>